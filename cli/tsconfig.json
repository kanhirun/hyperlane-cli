{
  "compilerOptions": {
    "declaration": true,
    "target": "es2020",                                  
    "module": "nodenext",                                
    "moduleResolution": "nodenext",                     
    "resolveJsonModule": true,                        
    "esModuleInterop": true,                         
    "rootDir": "src",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                
    "skipLibCheck": true                          
  },
  "include": ["src/**/*"]
}
